<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.bestfriends">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity"/>
        <activity android:name=".books.BooksView"/>
        <activity android:name=".notes.NotesView"/>
        <activity android:name=".calendar.HCalendarView"/>
        <activity android:name=".list_kido.ListKidoView"/>
        <activity android:name=".video.VideoView"/>
        <activity android:name=".contacts.ContactsView"/>
        <activity android:name=".settings.SettingsView"/>
        <activity android:name=".list_kido.CreatePersonView"/>
        <activity android:name=".MainView"/>

    </application>
</manifest>